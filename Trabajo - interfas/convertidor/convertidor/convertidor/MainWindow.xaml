<Window x:Class="convertidor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:convertidor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="661*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="salir" Content="Salir" HorizontalAlignment="Left" Margin="155,292,0,0" VerticalAlignment="Top" Height="42" Width="93" Click="Salir_Click"/>
        <Button x:Name="Convertir" Content="Convertir" HorizontalAlignment="Left" Margin="479,292,0,0" VerticalAlignment="Top" Height="42" Width="93" Click="Convertir_Click"/>
        <TextBlock x:Name="unid1" HorizontalAlignment="Left" Margin="166,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"/>
        <TextBox x:Name="unidad1" HorizontalAlignment="Left" Height="26" Margin="155,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93"/>
        <TextBlock x:Name="unid2" HorizontalAlignment="Left" Margin="388,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83"/>
        <TextBox x:Name="unidad2" HorizontalAlignment="Left" Height="26" Margin="383,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93"/>
        <TextBlock HorizontalAlignment="Left" Margin="386,83,0,0" TextWrapping="Wrap" Text="Ingrese la medida que desea convertir" VerticalAlignment="Top"/>
        <ComboBox x:Name="opcion" HorizontalAlignment="Left" Margin="466,99,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Longitud"/>
            <ComboBoxItem Content="Peso"/>
            <ComboBoxItem Content="Temperatura"/>
        </ComboBox>
        <TextBlock HorizontalAlignment="Center" Margin="0,201,0,0" TextWrapping="Wrap" Text="Resultado" VerticalAlignment="Top"/>
    </Grid>
</Window>
